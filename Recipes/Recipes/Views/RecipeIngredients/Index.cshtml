@model IEnumerable<Recipes.RecipeIngredient>


<table class="table">
    <tr>
        <th>  Recipes</th>
        <th> </th>
        <th>   Ingredients</th>
    </tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Recipe.Name)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recipe.Description)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredient.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredient.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Recipe.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Recipe.Description)

        </td>
        <td>


            <ul>
                <li>


                    @Html.DisplayFor(modelItem => item.Ingredient.Name)

                </li>
            </ul>

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredient.Quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Create New", "Create")
        </td>
    </tr>
  

}

</table>
